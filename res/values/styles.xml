<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">

        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:imageButtonStyle">@style/ButtonWithNoBG</item>
        <item name="android:buttonStyle">@style/ButtonWithNoBG</item>
    </style>

    <style name="ButtonWithNoBG">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="AppTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <style name="TitleBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/base_title_bar_height</item>
    </style>
    
    <style name="TitleBarText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base_title_bar_textsize</item>
        <item name="android:gravity">center</item>
    </style>

</resources>